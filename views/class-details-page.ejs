
<%- include('includes/header') %> 
<%- include('includes/flash') %>

<div style="display: flex;flex-wrap: wrap;">
  <div class="col-lg"></div>
  <div class="col-lg-7">

    <h5 class="bolder text-primary pt-1 text-center"><strong>Class Attendence Taking</strong></h5>
    <div class="single-batch-container">
      <div class="single-batch-data pb-4">
        <div style="position: relative;">
          
          <div class="text-success text-center"><strong>Department Name : <%=classDetails.departmentName%></strong></div>
          <div class="text-success text-center"><strong>Semester : <i><%=classDetails.semesterStatus%></i></strong></div>
          <hr>
          <div class="text-success text-center"><strong>Subject Name : <%=classDetails.subject%></strong></div>
          <div class="text-success text-center"><strong>Class Timing : <%=classDetails.timing%></strong></div>
          <div class="text-success text-center"><strong>Professor : <i><%=classDetails.professor.userName%></i></strong></div>
          <div class="text-success text-center"><strong>Period Number : <i><%=classDetails.period%></i></strong></div>
        
        </div>
        <hr>
        <div>
            <h4 class="bolder text-center"><strong>All Class Attented Students(<%=classDetails.presentStudents.length%>)</strong></h4>
            <hr>
            <%if(!classDetails.presentStudents.length){%>
                <div class="btn btn-lg btn-block btn-info">No student attented class.</div>
            <%}else{%>
                <%classDetails.presentStudents.forEach((student)=>{%>
                    <li class="list-group-item list-group-item-action d-flex align-items-center">
                        <div class="mr-auto d-flex"> 
                        <div class="mr-2">
                            <img class="member-avatar"  src="/image/<%=student.regNumber%>" alt="">
                        </div>
                        <div>
                            <span class="item-text d-block"><strong>Name : </strong><%=student.userName%></span>
                            <span class="item-text d-block"><strong>Registration No : </strong><%=student.regNumber%></span>
                        </div>
                        </div>
                    </li>
                <%})%>
            <%}%>
        </div>
      </div>
    </div>

  </div>
  <div class="col-lg"></div>
</div>

<%- include('includes/footer') %>


